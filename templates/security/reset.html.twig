{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block stylesheets %}
    <link href="/css/frontend/singlepage.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="jumbotron">

            {% for message in app.flashes('echec') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <h2>Reset Password/Email</h2><br>
            <form action="{{ path('resetting', {id: user.id}) }}" method="post">
                <div class="form-group">
                    <label for="email">Adresse mail : </label>
                    <input type="text" id="email" name="_email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe : </label>
                    <input type="password" id="password" name="_password" class="form-control">
                </div>
                <input type="hidden" name="token" value="{{ csrf_token(user.password) }}"/>
                <button type="submit" class="btn btn-primary">Reset</button>
            </form>
            <br>

        </div>
    </div>

{% endblock %}
