<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="/css/bootstrap.css" rel="stylesheet">
        <link href="/css/snowtricks.css" rel="stylesheet">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-light bg-light" id="desktop">
            <a class="navbar-brand" href="{{ path('frontend') }}">
                <img src="/img/logo-Snowtricks.png" id="logo" width="100">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto text-right">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('frontend') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('frontend') }}#anchor">Tricks</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link btn-danger" href="{{ path('logout') }}">Se d√©connecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Sign In</a>
                        </li>
                    {% endif %}
                </ul>

            </div>
        </nav>

        <nav id="mobile">
            <div class="row mt-2">
                <div class="col-4">
                    <a href="{{ path('frontend') }}">
                        <img src="/img/open-iconic-master/svg/home.svg" width="30">
                    </a>
                </div>
                <div class="col-4">
                    <a href="{{ path('frontend') }}#anchor">
                        <img src="/img/open-iconic-master/svg/list.svg" width="30">
                    </a>
                </div>
                {% if app.user %}
                <div class="col-4">
                    <a href="{{ path('logout') }}">
                        <img src="/img/open-iconic-master/svg/account-logout.svg" width="30">
                    </a>
                </div>
                {% else %}
                <div class="col-4">
                    <a href="{{ path('login') }}">
                        <img src="/img/open-iconic-master/svg/account-login.svg" width="30">
                    </a>
                </div>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
        <hr>
        <footer>
            <p class="text-center pt-4 pb-4">Contact : jimmy@snowtricks.com</p>
        </footer>
        {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
